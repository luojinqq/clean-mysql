{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es2015",
    "pretty": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./@types/"
    ],
    "sourceMap": false
  },
  "exclude": [
    "lib/*",
    "node_modules/*"
  ],
  "compileOnSave": true
}